{
  "manifest_version": 3,
  "name": "Volumetrica Trading Extension",
  "version": "1.0.0",
  "description": "Ultra-lean trading extension for Volumetrica",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://d-traderslaunch.volumetricatrading.com/*",
    "https://*.volumetricafx.com/*",
    "https://*.volumetricatrading.com/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}